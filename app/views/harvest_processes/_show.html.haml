%strong= "#{l(process.created_at.localtime, format: :short)}"
- if process.method_breadcrumbs
  = process.method_breadcrumbs.split(',').join(" &rarr; ").html_safe
- if process.current_group
  = "currently in #{process.current_group}"
  - if process.current_group_size
    = "(size: #{process.current_group_size})"
  - if process.current_group_times
    = "(last five times: #{process.current_group_times[-5,-1].join(', ')})"
    - if process.current_group_times.size > 5
      - avg = process.current_group_times.sum / process.current_group_times.size
      = "(average of all times): #{avg})"
